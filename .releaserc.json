{
  "branches": [
    "main",
    {
      "name": "next",
      "prerelease": true
    }
  ],
  "tagFormat": "v${version}",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "build/libs/*.jar"
          }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogTitle": "# Changelog",
        "changelogFile": "CHANGELOG.md"
      }
    ],
    "gradle-semantic-release-plugin",
    ["semantic-release-discord-notifier", {
      "embedJson": {
        "username": "Stonecraft",
        "avatar_url": "https://stonecraft.meza.gg/img/stonecraft@0.25x.png",
        "content": "# :rocket: ${nextRelease.version} just dropped",
        "embeds": [
          {
            "title": "What changed?",
            "description": "${nextRelease.notes}",
            "color": 7377919
          }
        ],
        "components": [
          {
            "type": 1,
            "components": [
              {
                "type": 2,
                "style": 5,
                "label": "Download from Gradle Plugin Portal",
                "url": "https://plugins.gradle.org/plugin/gg.meza.stonecraft"
              },
              {
                "type": 2,
                "style": 5,
                "label": "Download from GitHub",
                "url": "https://github.com/meza/Stonecraft/releases/tag/v${nextRelease.version}"
              }
            ]
          }
        ]
      }
    }]
  ]
}
