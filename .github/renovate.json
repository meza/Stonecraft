{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>stateshifters/renovate-common"
  ],
  "baseBranchPatterns": [
    "main",
    "/^v\\d+\\.\\d+\\.x$/"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "npm"
      ],
      "semanticCommitType": "docs",
      "automerge": true
    },
    {
      "matchManagers": [
        "gradle",
        "gradle-wrapper"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "semanticCommitType": "ci",
      "automerge": true
    },
    {
      "matchBaseBranches": [
        "/^v\\d+\\.\\d+\\.x$/"
      ],
      "schedule": [
        "before 5am on monday"
      ],
      "groupName": "maintenance dependency rollup",
      "groupSlug": "maintenance-deps",
      "matchManagers": [
        "gradle",
        "gradle-wrapper",
        "npm",
        "github-actions"
      ],
      "separateMinorPatch": false
    },
    {
      "matchBaseBranches": [
        "v1.7.x"
      ],
      "matchPackageNames": [
        "dev.kikugie.stonecutter:dev.kikugie.stonecutter.gradle.plugin"
      ],
      "allowedVersions": "0.6.2"
    },
    {
      "matchBaseBranches": [
        "next"
      ],
      "matchPackageNames": [
        "dev.kikugie.stonecutter:dev.kikugie.stonecutter.gradle.plugin"
      ],
      "allowedVersions": "^0.8.0 <0.9.0"
    },
    {
      "matchBaseBranches": [
        "v1.7.x"
      ],
      "matchManagers": [
        "gradle-wrapper"
      ],
      "allowedVersions": "8.14"
    }
  ]
}
