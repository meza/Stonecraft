{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>stateshifters/renovate-common:deps"
  ],
  "baseBranchPatterns": [
    "main",
    "next",
    "/^v\\d+\\.\\d+\\.x$/"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "npm"
      ],
      "semanticCommitType": "docs",
      "automerge": true
    },
    {
      "matchManagers": [
        "gradle",
        "gradle-wrapper"
      ],
      "automerge": true
    },
    {
      "matchBaseBranches": [
        "/^v\\d+\\.\\d+\\.x$/"
      ],
      "schedule": [
        "before 5am on monday"
      ],
      "groupName": "maintenance dependency rollup",
      "groupSlug": "maintenance-deps",
      "matchManagers": [
        "gradle",
        "gradle-wrapper",
        "npm",
        "github-actions"
      ],
      "separateMinorPatch": false
    },
    {
      "matchPackageNames": [
        "dev.kikugie.stonecutter:dev.kikugie.stonecutter.gradle.plugin",
        "dev.architectury.loom:dev.architectury.loom.gradle.plugin"
      ],
      "semanticCommitType": "deps"
    },
    {
      "matchBaseBranches": [
        "v1.7.x"
      ],
      "matchPackageNames": [
        "dev.kikugie.stonecutter:dev.kikugie.stonecutter.gradle.plugin"
      ],
      "allowedVersions": "0.6.2"
    },
    {
      "matchBaseBranches": [
        "next"
      ],
      "matchPackageNames": [
        "dev.kikugie.stonecutter:dev.kikugie.stonecutter.gradle.plugin"
      ],
      "allowedVersions": "^0.8.0 <0.9.0"
    },
    {
      "matchBaseBranches": [
        "v1.7.x"
      ],
      "matchManagers": [
        "gradle-wrapper"
      ],
      "allowedVersions": "8.14"
    },
    {
      "matchPackageNames": [
        "dev.architectury.loom:dev.architectury.loom.gradle.plugin"
      ],
      "minimumReleaseAge": null
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Keep quickstart docs and test fixture Stonecutter plugin versions aligned",
      "managerFilePatterns": [
        "/^README\\.md$/",
        "/^docs\\/docs\\/02-Quickstart\\.mdx$/",
        "/^src\\/test\\/resources\\/fixtures\\/settings\\.gradle\\.kts$/"
      ],
      "matchStrings": [
        "id\\(\"dev\\.kikugie\\.stonecutter\"\\) version \"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "dev.kikugie.stonecutter:dev.kikugie.stonecutter.gradle.plugin",
      "packageNameTemplate": "dev.kikugie.stonecutter:dev.kikugie.stonecutter.gradle.plugin",
      "datasourceTemplate": "gradle-version"
    }
  ]
}
