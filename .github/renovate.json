{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>stateshifters/renovate-common"
  ],
  "baseBranches": [
    "main",
    "/^v\\d+\\.\\d+\\.x$/"
  ],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "semanticCommitType": "docs"
    },
    {
      "matchManagers": ["gradle", "gradle-wrapper"],
      "automerge": true
    },
    {
      "matchBaseBranches": ["/^v\\d+\\.\\d+\\.x$/"],
      "schedule": [
        "before 5am on monday"
      ],
      "groupName": "maintenance dependency rollup",
      "groupSlug": "maintenance-deps",
      "matchManagers": ["gradle", "gradle-wrapper", "npm", "github-actions"],
      "separateMinorPatch": false
    }
  ]
}
